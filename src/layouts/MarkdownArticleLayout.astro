---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---
<Layout>
  <article class="prose prose-lg max-w-4xl mx-auto px-4 py-8">
    <header class="">
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      <div class="flex flex-col text-sm text-gray-600 items-start">
        <time>{frontmatter.pubDate}</time>
        <div class="flex items-center gap-2">
          <img src="/me.jpg" class="w-10 h-10 rounded-full object-cover" />
          <span class="text-md font-bold">{frontmatter.author}</span>
        </div>
      </div>
    </header>
    <div class="prose prose-neutral max-w-none">
      <slot />
    </div>
  </article>
</Layout>