---
import "../styles/globals.css"
import UCSDLogo from "../assets/UCSD.astro";
import MiTekLogo from "../assets/MiTek.astro";
import AmazonLogo from "../assets/Amazon.astro";
import Badge from "../components/Badge.astro";
import ExternalLink from "../components/ExternalLink.astro";
import Layout from "../layouts/Layout.astro";


const externalLinks = [
    {
        href: "https://linkedin.com/in/anthony-marinov",
        text: "linkedin",
    },
    {
        href: "/resume.v3.1-anthony-marinov.pdf",
        text: "resume",
    },
    {
        href: "https://github.com/anthonymarinov",
        text: "github",
    },
    {
        href: "/portfolio-anthony-marinov.pdf",
        text: "portfolio",
    },
    {
        href: "mailto:anthonymmarinov@gmail.com",
        text: "email",
    },
];
---

<Layout>
    <main class="flex-auto min-w-0 mt-6 flex flex-col px-2 md:px-0">
        <h1 class="mb-8 text-2xl font-medium tracking-tighter">hey, i'm anthony ðŸ˜ƒ</h1>
        <p class="prose prose-neutral dark:prose-invert">

        I'm currently working on finishing my master's degree in Structural Engineering with a focus in Computer Science at

        <Badge href="https://ucsd.edu">
            <UCSDLogo />
            <span class="no-prose"> University of California, San Diego </span>
        </Badge>.

        Previously, I worked as a Software Development Engineer at

        <Badge href="https://www.amazon.com/">
            <AmazonLogo />
            <span class="no-prose"> Amazon </span>
        </Badge>

        and as a Research and Development Engineer at 
        
        <Badge href="https://www.mitek-us.com">
            <MiTekLogo />
            <span class="no-prose"></span>
        </Badge>.

        See my links below!

        </p>

        <ul
        class="font-medium mt-8 flex flex-col space-x-0 space-y-2 text-neutral-600 md:flex-row md:space-x-4 md:space-y-0 dark:text-neutral-300"
        >
        {
            externalLinks.map(({ href, text }) => (
            <li>
                <ExternalLink href={href}>{text}</ExternalLink>
            </li>
            ))
        }
        </ul>
    </main>
</Layout>
