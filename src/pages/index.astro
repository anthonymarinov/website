---

<Layout>
    <main class="mt-6 md:mt-0 flex flex-col overflow-x-hidden">
        <section class="flex flex-col-reverse md:flex-row items-start md:items-center justify-between gap-8 md:gap-60 mb-12 md:min-h-[calc(65vh)] pt-4 md:pt-0">
            <div class="flex-1">
                <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
                    Engineer, <span class="underline">researcher</span>, developer.
                </h1>
                <p class="text-lg text-neutral-400">
                    Structural engineer and software developer passionate about applying advanced tech. Currently combining high-performance computing with proprietary simulation software to design impact-resistant metamaterials.
                </p>
            </div>
            <div class="flex-shrink-0 self-start md:self-auto animate-float pt-4 md:pt-0">
                <img 
                    src="/me.jpg" 
                    alt="Anthony Marinov" 
                    class="w-48 h-48 md:w-80 md:h-80 object-cover rounded-2xl"
                />
            </div>
        </section>

        <!-- Articles Section -->
        <div id="articles"></div>
        <section class="mt-16 px-4 py-8 bg-cream-5 rounded-2xl md:px-8">
            <div class="flex flex-col md:flex-row md:gap-60">
                <h2 class="text-2xl font-semibold tracking-tighter mb-8 md:mb-0 md:w-48 flex-shrink-0">Articles</h2>
                <div class="flex-1">
                    <div class="divide-y divide-neutral-200">
                        {articles.slice(0, 2).map((article: any) => (
                            <ArticlePreview 
                                title={article.frontmatter.title}
                                description={article.frontmatter.description}
                                date={article.frontmatter.pubDate}
                                href={article.url}
                                image={article.frontmatter.image?.url || '/placeholder.jpg'}
                            />
                        ))}
                    </div>
                    <div class="mt-8">
                        <a 
                            href="/articles"
                            class="inline-flex items-center gap-2 text-neutral-600 hover:text-black transition-colors font-medium"
                        >
                            See all articles
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Experiences Section -->
        <div id="experiences"></div>
        <section class="mt-16 px-4 py-8 md:px-8">
            <div class="flex flex-col md:flex-row md:gap-60">
                <h2 class="text-2xl font-semibold tracking-tighter mb-8 md:mb-0 md:w-48 flex-shrink-0">Experiences</h2>
                <div class="flex-1 divide-y divide-neutral-200">
                    {experiences.map(({ role, team, teamHref, company, companyHref, date, logo }) => (
                        <div class="flex items-center justify-between gap-4 py-4 first:pt-0">
                            <div class="flex items-center gap-4">
                                <a 
                                    href={companyHref} 
                                    target="_blank" 
                                    rel="noopener noreferrer"
                                    class="flex-shrink-0 w-12 h-12 hover:opacity-80 transition-opacity"
                                >
                                    <img 
                                        src={logo} 
                                        alt={`${company} logo`} 
                                        class="w-full h-full object-contain"
                                    />
                                </a>
                                <div>
                                    <h3 class="font-semibold">
                                        {role} / <a 
                                            href={teamHref} 
                                            target="_blank" 
                                            rel="noopener noreferrer"
                                            class="hover:underline"
                                        >
                                            {team}
                                        </a>
                                    </h3>
                                    <a 
                                        href={companyHref} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="text-neutral-600 hover:underline"
                                    >
                                        {company}
                                    </a>
                                </div>
                            </div>
                            <span class="text-neutral-500 text-sm flex-shrink-0">{date}</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Resources Section -->
        <div id="resources"></div>
        <section id="resources" class="mt-16 px-4 py-8 md:px-8">
            <div class="flex flex-col md:flex-row md:gap-60">
                <h2 class="text-2xl font-semibold tracking-tighter mb-8 md:mb-0 md:w-48 flex-shrink-0">Resources</h2>
                <div class="flex-1 divide-y divide-neutral-200">
                    {resources.map(({ name, type, date, href, icon }) => (
                        <a 
                            href={href}
                            target={href.startsWith('http') ? "_blank" : undefined}
                            rel={href.startsWith('http') ? "noopener noreferrer" : undefined}
                            class="flex items-center gap-3 py-4 rounded group"
                        >
                            <span class="flex-shrink-0" set:html={icon} />
                            <div class="flex-1 min-w-0">
                                <div class="font-medium text-black group-hover:text-neutral-400 truncate">{name}</div>
                                <div class="text-sm text-neutral-600 group-hover:text-neutral-400">{type} {date && `â€¢ ${date}`}</div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- Golf Handicap Section -->
        <div id="golf"></div>
        <section id="golf">
          <GolfHandicap
              data={golfHandicapData}
              title="My Golf Progress"
              subtitle="Keep up with my golf progress. Life's rough, but just keep chipping away at it."
          />
        </section>
    </main>
</Layout>
